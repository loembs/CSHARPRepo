@page
@model WebApplication.Views.Client.CreateModel
@{
    ViewData["Title"] = "Client Page";
    @* Layout = "_Layout"; *@
}


<div class="card">
    <div class="card-header">Creation client</div>
    <div class="card-body">

        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label for="" class="form-label" asp-for="Surnom">Surnom</label>

                <input type="text" class="form-control" asp-for="Surnom" id="" />
                <span id="emailHelpId" class="form-text text-danger" asp-validation-for="Surnom"></span>

            </div>

            <div class="mb-3">
                <label for="" class="form-label" asp-for="Telephone">Telephone</label>
                <input type="text" class="form-control" asp-for="Telephone" id=""/>
                <span id="emailHelpId" class="form-text text-danger" asp-validation-for="Telephone"></span>
            </div>

            <div class="mb-3">
                <label for="" class="form-label" asp-for="Adresse">Adresse</label>
                <textarea type="text" id="" class="form-control" asp-for="Adresse"></textarea>
            </div>

            <div class="d-flex justify-content-end">
                <button class="btn btn-outline-dark" type="submit" >Submit</button>
            </div>
        </form>
    </div>
